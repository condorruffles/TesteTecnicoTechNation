@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script type="module" src="~/js/Dashboard/filterDashboard.js"></script>
</head>
<body>
    <div class="container-lg text-center pt-5">
        <div class="row">
            <div class="col-4 d-flex justify-content-end align-items-center">
                <div class="tipo_periodo">
                    <label for="tipo_periodo">Filtrar por:</label>
                    <select class="form-select" id="tipo_periodo">
                        <option value="A">Ano</option>
                        <option value="M">Mês</option>
                        <option value="T">Trimestre</option>
                    </select>
                    <div id="seletor_data" class="mt-3">
                        <label for="monthDate">Selecione o mês e o ano:</label>
                        <input type="month" id="monthDate" class="form-control form-control-month">
                    </div>
                    <div id="seletor_trimestre" class="mt-3">
                        <label for="trimestre">Selecione o trimestre:</label>
                        <select class="form-select" id="trimestre">
                            <option data-month="1" data-final_month="3">Janeiro - Março</option>
                            <option data-month="4" data-final_month="6">Maio - Junho</option>
                            <option data-month="7" data-final_month="9">Julho - Setembro</option>
                            <option data-month="10" data-final_month="12">Outubro - Dezembro</option>
                        </select>
                    </div>
                    <div id="seletor_ano" class="mt-3">
                        <label for="year">Digite o ano:</label>
                        <input type="number" id="year" class="form-control" placeholder="Ano" />
                    </div>
                    <div class="botoes mt-3 d-flex justify-content-between">
                        <button id="filter" class="btn btn-primary">Filtrar</button>
                        <button id="clearFilter" class="btn btn-primary">Limpar filtros</button>
                    </div>
                </div>
            </div>
            <div class="col-8">
                <div id="dashboardChart" style="height: 400px;"></div>
            </div>
        </div>
        <div class="row mt-4">
            <p class="h3">Evolução de inadimplência e receita em <span id="ano">@ViewData["Ano"]</span></p>
            <div class="col-6">
                <div id="inadimplenciaChart" style="height: 400px;"></div>
            </div>
            <div class="col-6">
                <div id="receitaChart" style="height: 400px;"></div>
            </div>
        </div>
    </div>
</body>
</html>
