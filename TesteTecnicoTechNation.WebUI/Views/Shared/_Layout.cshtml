<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - UneCont</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/TesteTecnicoTechNation.WebUI.styles.css" asp-append-version="true" />
	<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
	<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
	<div class="container-fluid ">
		<div class="row flex-nowrap">
			<div class="col-auto px-0">
				<div id="sidebar" class="collapse collapse-horizontal show border-end h-100">
					<div id="sidebar-nav" class="list-group border-0 rounded-0 text-sm-start h-100 ">
						<div class="mb-4 me-2 pt-2 logo border-end-0 d-inline-block"><i class="bi bi-coin px-3"></i> <span>UneCont</span></div>
						<a href="/Dashboard" id="dashboard-menu" class="list-group-item border-end-0 d-inline-block" data-bs-parent="#sidebar"><i class="bi bi-pie-chart px-3"></i> <span>Dashboard</span> </a>
						<a href="/NotaFiscal" id="notas-fiscais-menu" class="list-group-item border-end-0 d-inline-block" data-bs-parent="#sidebar"><i class="bi bi-receipt px-3"></i> <span>Notas Fiscais</span></a>
					</div>
				</div>
			</div>
			<main role="main" class="col pt-2 px-0">
				<nav class="navbar navbar-expand-lg bg-body-tertiary shadow-navbar ps-0 w-100 d-flex justify-content-between">
					<div class="d-flex align-items-center col-4">
						<a href="#" data-bs-target="#sidebar" data-bs-toggle="collapse" class="ms-3 border rounded-3 px-3 text-decoration-none">
							<i class="bi bi-list py-2 p-1"></i>
						</a>
						<h3 class="mb-0 ms-5">@ViewData["Title"]</h3>
					</div>
					<div class="profile col-11">
						<a class="ms-3 px-3 d-flex align-items-center" href="#">
							<i class="bi bi-person fs-1"></i>
							<div class="d-flex flex-column">
								<span style="font-size: 16px">@ViewData["Name"]</span>
								<span style="font-size: 12px">@ViewData["Role"]</span>
							</div>
						</a>
					</div>
				</nav>
				<div class="container-fluid min-vh-100 mt-5">
					@RenderBody()
				</div>
			</main>
		</div>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
